{
  "name": "odoo-linter",
  "displayName": "Odoo Linter",
  "description": "A linter for Odoo development in VS Code.",
  "version": "0.0.6",
  "repository": {
    "url": "https://github.com/maikCyphlock/odoo-linter"
  },
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:xml"
  ],
  "main": "./out/extension.js",
  "contributes": {},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "./node_modules/.bin/tsc -p ./",
    "watch": "./node_modules/.bin/tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "fast-xml-parser": "^4.5.3"
  }
}
